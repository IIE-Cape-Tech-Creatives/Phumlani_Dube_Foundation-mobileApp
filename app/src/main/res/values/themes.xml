<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PhumlaniDubeFoundationMobileApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/peacock_blue</item> <!-- Peacock Blue -->
        <item name="colorPrimaryVariant">@color/darker_peacock_blue</item> <!-- Darker Peacock Blue -->
        <item name="colorOnPrimary">@color/white</item> <!-- White -->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/forest_green</item> <!-- Forest Green -->
        <item name="colorSecondaryVariant">@color/darker_forest_green</item> <!-- Darker Forest Green -->
        <item name="colorOnSecondary">@color/white</item> <!-- White -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PhumlaniDubeFoundationMobileApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PhumlaniDubeFoundationMobileApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PhumlaniDubeFoundationMobileApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>